    "version": "0.2.0",
    "configurations": [
        {
            "type": "harbour-dbg",
            "request": "launch",
            "name": "Launch Harbour Program",
            "stopOnEntry": false,
            "preLaunchTask": "CompileDebug",
            "postDebugTask": "",
            "workingDir": "${workspaceFolder}",
            "windows":{
                "program": "${workspaceFolder}\\build\\win64\\mingw64\\debug\\ClientAPI.exe",
            },
            "linux":{
                "program": "${workspaceFolder}/build/lin64/gcc/debug/ClientAPI.exe",
            },
            "sourcePaths": [
                "${workspaceFolder}"
            ]
        }
    ]
}