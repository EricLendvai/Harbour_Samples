{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SwitchOS",
            "windows": {
                "command": "${command:remote-containers.reopenInContainer}",
                "options": {
                    "statusbar": {"label" : "<Open Container - Go to Ubuntu>","hide" : false}
                }
            },
            "linux": {
                "command": "${command:remote-containers.reopenLocally}",
                "options": {
                    "statusbar": {"label" : "<Close Container - Go to Windows>","hide" : false}
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "RunDebug",
            "command": "${command:workbench.action.debug.start}",
            "options": {
                "cwd": "${workspaceFolder}",
                "name":"Launch Harbour Program 1",
                "statusbar": {"label" : "<Compile and Debug>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileDebug",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\..\\BuildTools\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "EXEName":"HarbourClasses",
                        "BuildMode":"debug",
                        "HB_COMPILER":"mingw64"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : true}
                }
            },
            "linux":{
                "command": "sh ${workspaceFolder}/../BuildTools/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "EXEName":"HarbourClasses",
                        "BuildMode":"debug",
                        "HB_COMPILER":"gcc"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : true}
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileRelease",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\..\\BuildTools\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "EXEName":"HarbourClasses",
                        "BuildMode":"release",
                        "HB_COMPILER":"mingw64"
                    },
                    "statusbar": {"label" : "<Compile Release and Run>","hide" : false}
                }
            },
            "linux":{
                "command": "sh ${workspaceFolder}/../BuildTools/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "EXEName":"HarbourClasses",
                        "BuildMode":"release",
                        "HB_COMPILER":"gcc"
                    },
                    "statusbar": {"label" : "<Compile Release and Run>","hide" : false}
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "RunRelease",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}\\build\\win64\\mingw64\\release\\HarbourClasses.exe"
            },
            "linux":{
                "command": "${workspaceFolder}/build/lin64/gcc/release/HarbourClasses.exe"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {},
                "statusbar": {"label" : "<Run Release>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}